@model IEnumerable<SubHub.Models.Subtitle>

@{
    ViewBag.Title = "ViewSubtitle";
}

<script src="~/scripts/jquery-1.10.2.js"></script>

@if (ViewBag.LanguageId == 1)
{
    <h2>Enskir textar fyrir "@ViewBag.MovieName"</h2>
}
else if (ViewBag.LanguageId == 2)
{
    <h2>Íslenskir textar fyrir "@ViewBag.MovieName"</h2>
}
else
{
    <h2>Textar fyrir "@ViewBag.MovieName"</h2>
}

<table class="table">
    <tr>
        <th>
            Stigagjöf
        </th>

        <th>
            Dagsetning
        </th>

        <th></th>
        <th></th>
        <th></th>

    </tr>
    @foreach (var item in Model)
{
    <tr>
        <td>
            <a href="@Url.Action("Upvote", new { id = item.Id })" class="vote-sub"><span class="glyphicon glyphicon-arrow-up"></span></a>
            <a href="@Url.Action("Downvote", new { id = item.Id })" class="vote-sub"><span class="glyphicon glyphicon-arrow-down"></span></a>
            <span class="rating-count">@item.SubtitleRating.Count</span>

            <div hidden class="upvote-error-message">
                <p> Smelltu @Html.ActionLink("hér", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) til að skrá þig inn.</p>
            </div>
        </td>
        <td>
            @item.DateSubmitted
        </td>

        <td>
            @using (Html.BeginForm("DownloadSubtitle", "Subtitle", new { id = item.Id }, FormMethod.Get))
            {
                <input type="submit" value="Hala niður" class="tfbutton get-text-button" />
            }
        </td>
        <td>
            @Html.ActionLink("Sjá umsagnir", "SubtitleComments", new { id = item.Id } )
        </td>
            <td>
                @Html.ActionLink("Breyta", "EditSubtitleLines", new { subtitleId = item.Id })
            </td>

        </tr>

   

    }

</table>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/SubtitleUpDownVoteScripts.js"></script>
