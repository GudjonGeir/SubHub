@model SubHub.Models.MediaViewModel

@{
    ViewBag.Title = "Media";
}

<h2>@Model.Name</h2>

<hr />
<div class="media-master">
    <div class="media-poster-div">
        <img src="@Model.PosterUrl" alt="@Model.Name" class="media-poster" />
    </div>
    <div class="media-info-text">
        @*<h4>@Model.Name</h4>*@
        @*<hr />*@
        <dl>@*class="dl-horizontal"*@
            <dt>
                @Html.DisplayNameFor(model => model.Genre.Genre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genre.Genre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Type.Type)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Type.Type)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateAired)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateAired.Year)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImdbUrl)
            </dt>

            <dd>
                <a href="@Model.ImdbUrl" target="_blank">Imdb Link</a>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SubtitleLanguages)
            </dt>

            <dd>
                @using (Html.BeginForm("ViewSubtitle", "Subtitle", FormMethod.Get))
                {
                    @Html.Hidden("mediaId", Model.Id)
                    @Html.DropDownList("languageId", Model.SubtitleLanguages)
                    <input type="submit" value="Sækja texta" />
                }
            </dd>

        </dl>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
