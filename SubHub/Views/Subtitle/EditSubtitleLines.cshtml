                @Html.EditorFor(modelItem => model.LineNumber)
                @Html.ValidationMessageFor(modelItem => model.LineNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(modelItem => model.Time, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(modelItem => model.Time)
                @Html.ValidationMessageFor(modelItem => model.Time)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(modelItem => model.LineOne, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(modelItem => model.LineOne)
                @Html.ValidationMessageFor(modelItem => model.LineOne)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(modelItem => model.LineTwo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(modelItem => model.LineTwo)
