        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(modelItem => model.Id)
        @Html.HiddenFor(modelItem => model.SubtitleId)



        <div class="form-group">
            @Html.LabelFor(modelItem => model.LineNumber, new { @class = "control-label col-md-2" })
