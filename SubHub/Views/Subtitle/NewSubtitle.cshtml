@model SubHub.Models.SubtitleViewModel
@{
    ViewBag.Title = "Hlaða upp textaskrá fyrir " + Model.MediaName; 
}

<h2>@ViewBag.Title</h2>


<form action="" method="post" enctype="multipart/form-data" >
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MediaId)
        <div class="form-group">
            @Html.LabelFor(model => model.LanguageId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.LanguageId, Model.SubtitleLanguages)
                @Html.ValidationMessageFor(model => model.LanguageId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SrtUpload, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SrtUpload)
                @Html.ValidationMessageFor(model => model.SrtUpload)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
